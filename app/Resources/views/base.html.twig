{% block stylesheets %}
<style>
    body {margin:0;}

    .topnav {
        position: fixed;
        top: 0;
        width: 100%;
        background-color: #333;
        border-bottom: 2px solid #7af5a3;
    }
    .topnav img {
        float: right;
        border-radius: 8px;
    }

    .topnav a {
        cursor: pointer;
        border-radius: 16px;
        border-bottom-left-radius: 0px;
        border-bottom-right-radius: 0px;
        border-bottom-width: 16px;
        margin-bottom: 0px;
        box-shadow: 0px -2px 2px rgba(0,0,0,0);
        -webkit-transform: perspective(5px) rotateX(1deg);
        color: #f2f2f2;
        text-align: center;
        display: inline-block;
        font-size: 17px;
        font-family: Arial;
    }

    .topnav a:hover {
        background-color: #77b7f3;
        color: black;
    }

    .topnav a.active {
        background-color: #7af5a3;
        color: black;
        font-weight: bold;
    }

</style>
{% endblock %}
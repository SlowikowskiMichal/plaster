{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <label><b>Login</b></label>
        <input type="text" placeholder="Login" name="uname" required>

        <label><b>Hasło</b></label>
        <input type="password" placeholder="Hasło" name="psw" required>

        <button type="submit">Zaloguj</button>
    </div>
    <div class="topnav">
        <img src ="Plaster.png" alt="Logo" width="150" height="50"/>
        <a class="active" herf="home">Zaloguj</a>
        <a herf="about">About</a>
    </div>

    <style>
        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: #7af5a3;
            color: black;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        button:hover {
            opacity: 0.8;
        }

        .container {
            font-family: Arial;
            overflow: hidden;
            top: 20px;
            position: relative;
            padding: 50px 20px;
            border: 3px solid #f1f1f1;
        }
    </style>
{% endblock %}


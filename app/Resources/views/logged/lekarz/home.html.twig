{% extends 'logged/lekarz/main.html.twig' %}


{% block body %}
    {{  parent() }}

    <div class="container">
        <h1>Witaj, {{ lekarz[0].imie }} {{ lekarz[0].nazwisko }}!</h1>
        {% if wizytyList != null %}
            <h3>Wizyty na dzie≈Ñ {{ (wizytyList[0].date)|date('d m Y') }}</h3>
            {% for wizyta in wizytyList %}
                <p>
                    Godzina: {{ (wizyta.time)|date('H:i') }}<br>
                    {{ wizyta.imie }} {{ wizyta.nazwisko }}<br>

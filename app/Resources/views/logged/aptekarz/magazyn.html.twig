{% extends '/:logged/aptekarz:main.html.twig' %}

{%  block stylesheets %}
    {{  parent() }}
{% endblock %}

{% block body %}
    {{  parent() }}

    <div class="container">

        <h1>Dostępne leki</h1>
        <center>
            <table id="leki">
            <tr class="header">
                <td>Nazwa</td>
                <td>Cena</td>
                <td>Stan</td>
                <td>Ilość</td>

            </tr>
            <tr class =emp>
                <td>Apsik</td>
                <td>2.50</td>
                <td>dostepny</td>
                <td>99</td>
            </tr>
            </table>
        </center>

    </div>

    <style>
        .container {
            font-family: Arial, sans-serif;
            text-align: center;
            overflow: hidden;
            max-width: 500px;
            margin: auto;
            top: 30px;
            position: relative;
            padding: 50px 20px;
            border: transparent;
        }
        table#leki{
            border-collapse: collapse;
            width: 200px;
        }
        #leki td{
            border-width: 1px;
            border-style: solid;
            border-color: #000000;
            padding:5px;
        }
        #leki .header{
            background-color: #dbe5f1;
            font-weight: bold;
        }

        #leki .emp{
            background-color: #f3f3f3;
        }


    </style>

{% endblock %}
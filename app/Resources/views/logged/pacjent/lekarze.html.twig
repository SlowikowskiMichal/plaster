{% extends 'logged/pacjent/main.html.twig' %}


{% block body %}
    {{  parent() }}

    <div class="container">
        <h2>Wyszukaj lekarza</h2>
        {{ form(search_form) }}
    </div>

    {% if pacjentList != null %}
        {% for lekarz in pacjentList %}
            <div class="container">
                <p>
                <center>
                    <h2><b>Lekarz: {{ lekarz.getSpecjalizacja.getName }}</b></h2>
                    <b>Imię:</b> {{ lekarz.getImie }}<br>
                    <b>Nazwisko:</b> {{ lekarz.getNazwisko }}<br>
                    <b>Telefon:</b> {{ lekarz.getTelephone }}<br>
                    <b>Godziny przyjęć</b><br>
                    {% for godziny in godzinyPrzyjec %}
                        {% if godziny.id == lekarz.getId %}
                            <b>{{ godziny.dzien }}: </b>{{ (godziny.start)|date('H:i') }} - {{ (godziny.end)|date('H:i') }}<br>
                        {% endif %}
                    {% endfor %}
                </center>
                </p>
            </div>
        {% endfor %}
    {% endif %}
    </div>
{% endblock %}
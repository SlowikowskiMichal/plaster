{% extends 'base.html.twig' %}

{%  block stylesheets %}
    {{  parent() }}
{% endblock %}

{% block body %}
    {{  parent() }}

    <div class="container">
        <h1>Wyszukaj lek</h1>
        <input id="sInput" type="text" placeholder="Nazwa" name="uname">
        <button id="btn" onclick="myFunction()" type="button">Szukaj</button>
        <pre><label id="p"></label></pre>
    </div>
    <style>
        .container {
            font-family: Arial, sans-serif;
            text-align: center;
            overflow: hidden;
            max-width: 500px;
            margin: auto;
            top: 30px;
            position: relative;
            padding: 50px 20px;
            border: transparent;
        }
    </style>
    <script>
        var sInput
        function myFunction() {
            sInput = document.getElementById('sInput').value;
            if(sInput == "Apsik") {
                document.getElementById("p").innerHTML = "Znaleziono Lek!\n" +
                    "Nazwa: Apsik\n" +
                    "Cena: 2.50\n";
            } else if(sInput == ""){
                document.getElementById("p").innerHTML = "Wprowadź nazwę leku!"
            } else{
                document.getElementById("p").innerHTML = "Nie ma takiego leku";
            }
        }
    </script>

{% endblock %}